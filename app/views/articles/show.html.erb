<div class="row article__avatar d-flex align-items-center">
  <%= link_to user_path(@article.user.id), method: :get do %>
    <%= image_tag @article.user.avatar.url %>
  <% end %>
  <h1><%= @article.title %></h1>
</div>
  <% if @article.like_by?(current_user) %>
    <p>
      <%= link_to article_likes_path(@article), method: :delete do %>
        ♥<%= @article.likes.count %> いいね
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to article_likes_path(@article), method: :post do %>
        ♡<%= @article.likes.count %> いいね
      <% end %>
    </p>
  <% end %>


<hr>

<div class="row">
  <div class="swiper-container slider">
     <div class="swiper-wrapper">
      <% @article.images.each do |image| %>
         <div class="swiper-slide"><%= image_tag image.to_s %></div>
      <% end %>
     </div>
     <div class="swiper-button-prev"></div>
     <div class="swiper-button-next"></div>
  </div>
  <div class="swiper-container thumbnail">
      <div class="swiper-wrapper">
       <% @article.images.each do |image| %>
         <div class="swiper-slide"><%= image_tag image.to_s %></div>
      <% end %>
      </div>
  </div>
</div>

<hr>

<h4>内容</h4>
<p><%= @article.body %></p>

<hr>

<h4>動画</h4>
<div class ="text-center">
  <%= video_tag(@article.video.to_s, :controls => true, height: "400px",width: "800px")  %>
</div>

<hr>

<h4>住所</h4>

<div class="show">
  <div class="show__address">
    <%= @article.spot.address %>
  </div>
  <div class="show__maps" id= 'show_map', style= "height: 320px;"></div>
</div>

<hr>

<div class="comments">
  <p>コメント件数：<%= @article.comments.count %></p>
  <% @article.comments.each do |comment| %>
    <div class="article__comment">
      <div class=" row ">
        <div class="article__avatar">
          <%= link_to user_path(comment.user.id), method: :get do %>
            <%= image_tag comment.user.avatar.url %>
          <% end %>
        </div>
        <div class="d-flex align-items-center">
          <div>
            <h5><%= comment.user.name %></h5>
            <%= comment.created_at.strftime('%Y/%m/%d') %>
          </div>
        </div>
      </div>
      <%= comment.body %>
    </div>
  <% end %>
</div>
<br>
<div class="new-comment">
  <%= form_with(model:[@article, @comment], local: true) do |f| %>
    <%= f.text_area :body, rows:'3',placeholder: "コメントをここに", class: "form-control mb-3"%>

    <%= f.submit "送信する", class: "btn btn-secondary mx-auto d-block" %>
  <% end %>
</div>


