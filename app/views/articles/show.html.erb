<h1>タイトル</h1>
<%= @article.title %>
<h5>内容</h5>
<%= @article.body %>

<% if @article.like_by?(current_user) %>
  <p>
    <%= link_to article_likes_path(@article), method: :delete do %>
      ♥<%= @article.likes.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to article_likes_path(@article), method: :post do %>
      ♡<%= @article.likes.count %> いいね
    <% end %>
  </p>
<% end %>





<div class="comments">
  <p>コメント件数：<%= @article.comments.count %></p>
  <% @article.comments.each do |comment| %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.body %>
  <% end %>
</div>
<div class="new-comment">
  <%= form_with(model:[@article, @comment], local: true) do |f| %>
    <%= f.text_area :body, rows:'5',placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>