<div class ="container">
  <%= form_with model: article, local:true,multipart: true do |f| %>
  
  <div class="form-group">
    <h5>題名</h5>
    <%= f.text_field :title, class: "form-control", :required => true %>
  </div>
  
  <div class="form-group">
    <h5>本文</h5>
    <%= f.text_area :body, class: "form-control", :required => true %>
  </div>
  
  <div class="form-group">
    <h5>場所</h5>
    <%= f.collection_select :place_id, places, :id, :area, { prompt: "選択してください"}, class: "form-control", :required => true%>
  </div>
  
  <div class="form-group">
    <h5>画像</h5>
    <%= f.file_field :images, multiple: true ,class: "form-control-file"%>
  </div>
  
  <div class="form-group">
    <h5>動画</h5>
    <%= f.file_field :video, :accept => 'video/*',class: "form-control-file" %>
  </div>
    
    
  
  
    <h5>地図</h5>
      <div class="spot">
        <%= f.fields_for :spot do |s| %>
          <%= s.text_field :address,　placeholder: "スポットを入力", id: "address", class: 'spot__text form-control mb-2' %>
        <% end %>
        <input type= "button" value="検索する" onclick= "codeAddress()"></input>
        <div class="map" id= "map", style= "height: 320px; width: 640px;"></div>
      </div>
  
  <hr>
  
    <%= f.submit 'Create', class: "btn btn-success" %>
  <% end %>
</div>

