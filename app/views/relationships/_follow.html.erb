 <% unless user == current_user %>
  <% if current_user.follower.exists?(followed_id: user.id) %>
   <%= link_to "フォローを外す", user_relationship_path(user.id), class: "btn btn-success mt-3", method: :delete %>
  <% else %>
   <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success mt-3", method: :post %>
  <% end %>
<% end %>